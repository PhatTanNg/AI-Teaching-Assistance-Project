# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/ai-teaching-app

# JWT Secret for authentication
JWT_SECRET=your-secret-key-here

# OpenAI API Key for transcript summarization
# This key is used by the summarization service to generate automatic summaries
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Google Cloud Credentials (for speech-to-text if using Google API)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# Server port
PORT=5001

# Environment
NODE_ENV=development
